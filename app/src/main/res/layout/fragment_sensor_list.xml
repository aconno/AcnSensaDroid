<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:columnOrderPreserved="true"
            android:padding="@dimen/card_margin"
            android:rowOrderPreserved="true"
            android:useDefaultMargins="true">

            <com.aconno.acnsensa.ui.SensorCardView
                android:id="@+id/sensor_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="@dimen/card_margin" />

            <com.aconno.acnsensa.ui.SensorCardView
                android:id="@+id/sensor_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="@dimen/card_margin" />

            <com.aconno.acnsensa.ui.SensorCardView
                android:id="@+id/sensor_humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="@dimen/card_margin" />

            <com.aconno.acnsensa.ui.SensorCardView
                android:id="@+id/sensor_pressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="@dimen/card_margin" />

            <com.aconno.acnsensa.ui.SensorCardView
                android:id="@+id/sensor_magnetometer_x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="@dimen/card_margin" />

            <com.aconno.acnsensa.ui.SensorCardView
                android:id="@+id/sensor_accelerometer_x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="@dimen/card_margin" />

            <com.aconno.acnsensa.ui.SensorCardView
                android:id="@+id/sensor_magnetometer_y"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="@dimen/card_margin" />

            <com.aconno.acnsensa.ui.SensorCardView
                android:id="@+id/sensor_accelerometer_y"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="@dimen/card_margin" />

            <com.aconno.acnsensa.ui.SensorCardView
                android:id="@+id/sensor_magnetometer_z"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="@dimen/card_margin" />

            <com.aconno.acnsensa.ui.SensorCardView
                android:id="@+id/sensor_accelerometer_z"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="@dimen/card_margin" />

            <com.aconno.acnsensa.ui.SensorCardView
                android:id="@+id/sensor_gyroscope_x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="@dimen/card_margin" />

            <com.aconno.acnsensa.ui.SensorCardView
                android:id="@+id/sensor_gyroscope_y"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="@dimen/card_margin" />

            <com.aconno.acnsensa.ui.SensorCardView
                android:id="@+id/sensor_gyroscope_z"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="@dimen/card_margin" />
        </GridLayout>
    </ScrollView>
</LinearLayout>