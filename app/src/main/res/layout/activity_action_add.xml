<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aconno.acnsensa.ui.AddActionActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/Toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/add_new_action_title" />

    <EditText
        android:id="@+id/action_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/screen_edge_left_right_margin"
        android:layout_marginStart="@dimen/screen_edge_left_right_margin"
        android:layout_marginTop="@dimen/item_vertical_spacing"
        android:hint="@string/action_name"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <TextView
        android:id="@+id/view_conditions_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/screen_edge_left_right_margin"
        android:layout_marginTop="@dimen/item_vertical_spacing"
        android:text="@string/conditions"
        android:textColor="@color/primaryTextColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/action_name" />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/condition_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/screen_edge_left_right_margin"
        android:layout_marginStart="@dimen/screen_edge_left_right_margin"
        android:layout_marginTop="@dimen/title_padding"
        app:dividerDrawableHorizontal="@drawable/chip_divider_horizontal"
        app:dividerDrawableVertical="@drawable/chip_divider_vertical"
        app:flexWrap="wrap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_conditions_label"
        app:showDivider="middle">

        <CheckedTextView
            android:id="@+id/temperature"
            style="@style/ChipView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Temperature" />

        <CheckedTextView
            android:id="@+id/light"
            style="@style/ChipView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Light" />

        <CheckedTextView
            android:id="@+id/humidity"
            style="@style/ChipView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Humidity" />

        <CheckedTextView
            android:id="@+id/pressure"
            style="@style/ChipView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Pressure" />

        <CheckedTextView
            android:id="@+id/magnetometer_x"
            style="@style/ChipView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Magnetometer X" />

        <CheckedTextView
            android:id="@+id/magnetometer_y"
            style="@style/ChipView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Magnetometer Y" />

        <CheckedTextView
            android:id="@+id/magnetometer_z"
            style="@style/ChipView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Magnetometer Z" />

        <CheckedTextView
            android:id="@+id/accelerometer_x"
            style="@style/ChipView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Accelerometer X" />

        <CheckedTextView
            android:id="@+id/accelerometer_y"
            style="@style/ChipView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Accelerometer Y" />

        <CheckedTextView
            android:id="@+id/accelerometer_z"
            style="@style/ChipView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Accelerometer Z" />

        <CheckedTextView
            android:id="@+id/gyroscope_x"
            style="@style/ChipView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Gyroscope X" />

        <CheckedTextView
            android:id="@+id/gyroscope_y"
            style="@style/ChipView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Gyroscope Y" />

        <CheckedTextView
            android:id="@+id/gyroscope_z"
            style="@style/ChipView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Gyroscope Z" />

        <CheckedTextView
            android:id="@+id/battery_level"
            style="@style/ChipView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Battery Level" />

    </com.google.android.flexbox.FlexboxLayout>

    <TextView
        android:id="@+id/view_outcomes_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/screen_edge_left_right_margin"
        android:layout_marginTop="@dimen/item_vertical_spacing"
        android:text="@string/outcomes"
        android:textColor="@color/primaryTextColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/condition_container" />

    <Spinner
        android:id="@+id/outcome_type_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/screen_edge_left_right_margin"
        android:layout_marginStart="@dimen/screen_edge_left_right_margin"
        android:layout_marginTop="@dimen/item_vertical_spacing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_outcomes_label" />

    <EditText
        android:id="@+id/phone_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/screen_edge_left_right_margin"
        android:layout_marginStart="@dimen/screen_edge_left_right_margin"
        android:layout_marginTop="@dimen/title_padding"
        android:hint="@string/phone_number"
        android:inputType="phone"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/outcome_type_spinner" />

    <EditText
        android:id="@+id/message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/screen_edge_left_right_margin"
        android:layout_marginStart="@dimen/screen_edge_left_right_margin"
        android:layout_marginTop="@dimen/item_vertical_spacing"
        android:hint="@string/message_hint"
        android:inputType="text"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phone_number" />

    <Button
        android:id="@+id/add_action_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
